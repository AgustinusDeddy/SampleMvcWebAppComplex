@using SampleMvcWebAppComplex.LayoutHelpers
@model ServiceLayer.CustomerServices.CrudCustomerDto

@{
    ViewBag.Title = "Create";
}
<h5 class="text-muted">Special features on this page</h5>
<ul class="text-muted">
    <li>Note the ! against a few fields. This is the way we will provide info on a field to user</li>
    <li>Done a little bit of segregation by using fieldsets</li>
    <li>Confirmation message on create</li>
</ul>  

<h2>Create Customer</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
